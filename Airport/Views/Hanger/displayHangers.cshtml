@model IEnumerable<Airport.Models.Entities.GetAvailableHangers>
@{
    ViewBag.Title = "displayHangers";
}

<h2>displayHangers</h2>
<script src="~/Scripts/Myscripts/GetPlanes.js"></script>
@using (Html.BeginForm("displayHangers", "Hanger", FormMethod.Post))
{
    if (Model != null)
    {
        <table>
            <tr>
                <th>Hanger Location</th>
                <th>Hanger Number</th>
                <th>Manager Name</th>
                <th>Social Securtiy Number</th>
                <th>Book</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <input type="hidden" name="fromdate" value='@TempData["fromdate"]' />
                    <input type="hidden" name="todate" value='@TempData["todate"]' />
                    <td>@item.HangerLocation</td>
                    <input type="hidden" name="@($"L{item.HangerId}")" value=@item.HangerLocation />
                    <td>@item.HangerId</td>
                    <input type="hidden" name="@($"I{item.HangerId}")" value=@item.HangerId />
                    <td>@item.ManagerName</td>

                    <td>@item.SSNo</td>

                    <td>@Html.RadioButton("Book", item.HangerId)</td>
                </tr>
            }
            <tr>
                <td>
                    <input type="button" value="submit" data-bs-toggle="modal"  id="GetAvailablePlanes" />
                </td>
            </tr>
        </table>

    }
    else
    {
        <p class="text-danger">No Availabe Hangers available in the selected dates</p>
    }
}
@if (ViewBag.msg != null)
{
    <p>
        @ViewBag.msg
    </p>
}
<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ownerNotFoundModalLabel">Book Hanger</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="BookHanger">submit</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ownerNotFoundModalLabel">Book Hanger</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>